<% include ../partials/header.ejs %>
<!-- DIV FROM HEADER IS HERE -->
</div>

<div id="resCard">
    <div class="container">
        <br>
        <h1 style="margin-left: 350px;"id="registerHere" class="inline"><%= restaurant.restaurant_name %></h1>
        <a href="/restaurant/profile/<%= email_id %>" class="ui left floated right button blue inline">Visit Profile</a>
        
        <a href="/item/add/<%= restaurant.restaurant_id %>" class="ui right floated right button green inline">Add Food Item</a>
        
        <br><br><br>
        <div class="row">
            <div class="col-md-3 ">
                <div class="list-group">
                    <% for(var j = 0 ; j < order.length ; j++) { %>
                    <li class="list-group-item active">Order Number <%= j+1 %></li>
                    <div class="ui floating labeled icon dropdown button">
                        <i class="spinner icon"></i>
                        <div class="text"><%= order[j].item_name %></div>
                    </div>
                    <div class="ui floating labeled icon dropdown button">
                        
                    <div class="text"><%= order[j].first_name %></div>

                        </div>
                        <div class="ui floating labeled icon dropdown button">
                            <div class="text"><%= order[j].address %></div>
                        </div>

                        <div class="ui floating labeled icon dropdown button">
                            <div class="text"><%= order[j].phone_number %></div>
                        </div>
                            <div class="ui floating labeled icon dropdown button">
                                <div class="text"><%= order[j].time %></div>
                            </div>   
                        <a href="/item/order/done/<%= restaurant.restaurant_id %>/<%= order[j].order_id %>" class="ui button green">Done</a>

                    <br><br><br>

                    <% } %>
                </div>
            </div>

            <% for(var i = 0 ; i < item.length ; i++) { %>
            <div class="col-md-3">
                <div class="thumbnail" id="RCard">
                    <img style="width: 120px; height : 100px; " class="img-responsive" src="/uploads/item/<%= item[i].image_name %>">
                    <div class="caption-pull">

                        <h4><strong><%= item[i].item_name %></strong></h4>
                        <h4 class=""><%= item[i].item_price %></h4>
                        <br>
                        <p>ratings: </p>                        
                        <p>item.reviews</p>
                        <a href="/item/edit/ <%= item[i].item_id %>" class="ui button blue">Edit</a>    
                    </div>
                    
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script
    src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
    crossorigin="anonymous"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/components/rating.min.js"></script>

<script type="text/javascript">
    $('.rating').rating();
</script>

