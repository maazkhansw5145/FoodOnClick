<% include ../partials/header.ejs %>
<!-- DIV FROM HEADER IS HERE -->
</div>

<div class="ui container">
    <h1 style="margin-left: 500px;">Edit Food Item</h1>
    <form action="/item/edit/<%= item.item_id %>" method="POST" class="ui form sizing">
        <div class="form-group">
            <img style="width: 180px; height : 150px; margin-left: 140px; " class="img-responsive" src="/uploads/item/<%= item.image_name %>">

        </div>
        
        <div class="ui field">
            <input type="text" name="itemEdit[image_name]" placeholder="Food Name" required value="<%= item.image_name %>">
        </div>

        <div class="ui field">
            <input type="text" name="itemEdit[name]" placeholder="Food Name" required value="<%= item.item_name %>">
        </div>

        <div class="ui field">    
            <input type="text" name="itemEdit[price]" placeholder="Price" value="<%= item.item_price %>" required>
        </div>

        <div class="ui form">
            <label for="itemEdit[permissibilty]">permissibilty</label>
            <div class="field">
                <div class="ui checkbox">
                    <input type="radio"  checked="" name="itemEdit[permissibilty]" value="1"/>
                    <label>Halal</label>
                </div>
            </div>

            <div class="field">
                <div class="ui checkbox">
                    <input type="radio" name="itemEdit[permissibilty]" value="2"/>
                    <label>Haram</label>
                </div>
            </div>
        </div>

        <div class="ui field">
            <label for="itemEdit[category]">Select your Item's Category</label>
            <select name="itemEdit[category]">
                <option value="1">Spicy</option>
                <option value="2">Fast Food</option>
                <option value="3">Sea Food</option>
                <option value="4">Vegetables</option>
                <option value="5">Meat</option>
                <option value="6">Local</option>
                <option value="7">Afghan</option>
                <option value="8">Break Fast</option>
                <option value="9">Rice</option>
                <option value="10">Drinks</option>
            </select>
        </div>


        <button class=" ui button blue" id="submit-button">Done</button>
    </form>
</div>
<% include ../partials/footer.ejs %>
