    <div class="container">
        <div class="row">
                <div style="width:30%; margin:40px 0 0 500px;" >
                    <div class="col-md-9">             
                        <h1><%= customer.first_name  + " " + customer.last_name %></h1>

                        <img class="ui small circular image" src="/uploads/customer/<%= customer.image_name %>">
